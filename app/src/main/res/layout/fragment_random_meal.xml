<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.meal.RandomMealFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/random_meal"
        android:textAlignment="center"
        android:textSize="@dimen/label_size" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/random_meal"
        android:padding="@dimen/view_padding"
        android:layout_margin="@dimen/view_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/meal_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_height"

                android:scaleType="centerCrop"
                android:layout_margin="@dimen/view_margin"
                tools:src="@drawable/meal_background"/>

            <TextView
                android:id="@+id/meal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                style="?attr/textAppearanceHeadline5"
                android:textStyle="italic"
                tools:text="Example Title"/>
            <TextView
                android:id="@+id/meal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                style="?attr/textAppearanceBody2"
                android:textSize="@dimen/description_size"
                tools:text="Example Description"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/view_margin"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_baseline_flip_camera_android_24"
        android:text="@string/random"/>

</LinearLayout>