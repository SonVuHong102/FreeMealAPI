<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.meal.MainMealFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search"
        style="@style/OutlinedRoundedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_padding"
        android:layout_margin="@dimen/view_margin"
        app:startIconDrawable="@drawable/ic_baseline_search_24"
        android:hint="@string/search_meals">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/search_category_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:padding="@dimen/view_padding"
        android:layout_margin="@dimen/view_margin"
        android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
        android:text="@string/search_by_category"/>
    <Button
        android:id="@+id/search_area_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:padding="@dimen/view_padding"
        android:layout_margin="@dimen/view_margin"
        android:drawableLeft="@drawable/ic_baseline_gps_fixed_24"
        android:text="@string/search_by_area"/>
    <Button
        android:id="@+id/search_ingredient_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:padding="@dimen/view_padding"
        android:layout_margin="@dimen/view_margin"
        android:drawableLeft="@drawable/ic_baseline_eco_24"
        android:text="@string/search_by_ingredient"/>
    <Button
        android:id="@+id/random_meal_dest"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:padding="@dimen/view_padding"
        android:layout_margin="@dimen/view_margin"
        android:drawableLeft="@drawable/ic_baseline_flip_camera_android_24"
        android:text="@string/get_random_meal"/>

</LinearLayout>